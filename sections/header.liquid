<header class="header-sticky">
  <div class="header__inner">
    <div class="header__menu">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url, class: 'header__menu-link' }}
      {% endfor %}
    </div>

    <h2 class="header__title">
      {{ shop.name | link_to: routes.root_url }}
    </h2>

    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}

        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </div>
</header>

{% stylesheet %}
  .header-sticky {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: #000000;
    border-bottom: 1px solid #333333;
    width: 100%;
  }

  .header__inner {
    height: 5rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 0 2rem;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .header__title {
    text-align: center;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0;
    grid-column: 2;
  }

  .header__title a {
    text-decoration: none;
    color: #FFFFFF;
  }

  .header__menu {
    display: flex;
    gap: 1.5rem;
    grid-column: 1;
  }

  .header__menu-link {
    text-decoration: none;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 12px;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .header__menu-link:hover {
    color: #CCCCCC;
  }

  .header__icons {
    display: flex;
    gap: 1.5rem;
    justify-content: flex-end;
    grid-column: 3;
    align-items: center;
  }

  .header__icons a {
    color: #FFFFFF;
    text-decoration: none;
    position: relative;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header__icons svg {
    width: 1.2rem;
    height: 1.2rem;
    fill: currentColor;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
