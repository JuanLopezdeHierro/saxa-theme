<div class="saxa-hero">
  {% if section.settings.image != blank %}
    {{ section.settings.image | image_url: width: 3840 | image_tag:
      loading: 'eager',
      width: section.settings.image.width,
      height: section.settings.image.height,
      class: 'saxa-hero__image',
      sizes: '100vw',
      widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
    }}
  {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'saxa-hero__image' }}
  {% endif %}

  <div class="saxa-hero__overlay"></div>

  <div class="saxa-hero__content saxa-reveal">
    <h2 class="saxa-hero__heading">{{ section.settings.heading | escape }}</h2>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="button saxa-hero__button">
        {{ section.settings.button_label | escape }}
      </a>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .saxa-hero {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background-color: #000000;
  }

  .saxa-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .saxa-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.4) 50%, #000000 100%);
    pointer-events: none;
  }

  .saxa-hero__content {
    position: absolute;
    bottom: 4rem;
    left: 4rem;
    max-width: 800px;
    z-index: 2;
  }

  .saxa-hero__heading {
    font-size: 5rem;
    line-height: 0.9;
    font-weight: 800;
    text-transform: uppercase;
    color: #FFFFFF;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .saxa-hero__button {
    background-color: transparent !important;
    border: 1px solid #FFFFFF !important;
    color: #FFFFFF !important;
    padding: 1.5rem 3rem;
    font-size: 1rem;
    letter-spacing: 0.2em;
  }

  .saxa-hero__button:hover {
    background-color: #FFFFFF !important;
    color: #000000 !important;
  }

  @media screen and (max-width: 750px) {
    .saxa-hero__content {
      left: 1.5rem;
      bottom: 2rem;
      right: 1.5rem;
    }
    .saxa-hero__heading {
      font-size: 3rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "SAXA Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Image banner",
      "label": "t:sections.image-banner.settings.heading.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop all",
      "label": "t:sections.image-banner.settings.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.image-banner.settings.button_link.label"
    }
  ],
  "presets": [
    {
      "name": "SAXA Hero Banner"
    }
  ]
}
{% endschema %}
